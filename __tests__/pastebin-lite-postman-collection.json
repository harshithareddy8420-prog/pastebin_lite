{
  "info": {
    "name": "Pastebin Lite API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "paste_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/healthz"
      }
    },
    {
      "name": "Create Paste (Basic)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/pastes",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Hello from Postman\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const json = pm.response.json();",
              "pm.environment.set('paste_id', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Fetch Paste (API)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/pastes/{{paste_id}}"
      }
    },
    {
      "name": "View Paste (HTML)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/p/{{paste_id}}"
      }
    },
    {
      "name": "Create Paste (Max Views = 1)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/pastes",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"View limit test\",\n  \"max_views\": 1\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.environment.set('paste_id', pm.response.json().id);"
            ]
          }
        }
      ]
    },
    {
      "name": "Fetch Paste (1st View)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/pastes/{{paste_id}}"
      }
    },
    {
      "name": "Fetch Paste (2nd View → 404)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/pastes/{{paste_id}}"
      }
    },
    {
      "name": "Create Paste (TTL = 60s)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/pastes",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"TTL test\",\n  \"ttl_seconds\": 60\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.environment.set('paste_id', pm.response.json().id);",
              "pm.environment.set('created_time', Date.now());"
            ]
          }
        }
      ]
    },
    {
      "name": "Fetch Paste (Before TTL Expiry)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-test-now-ms",
            "value": "{{created_time}}"
          }
        ],
        "url": "{{base_url}}/api/pastes/{{paste_id}}"
      }
    },
    {
      "name": "Fetch Paste (After TTL Expiry → 404)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "x-test-now-ms",
            "value": "{{created_time}}+61000"
          }
        ],
        "url": "{{base_url}}/api/pastes/{{paste_id}}"
      }
    },
    {
      "name": "Create Paste (Invalid Input)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": "{{base_url}}/api/pastes",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"\"\n}"
        }
      }
    }
  ]
}
